<div>
	<div id="filter-section">
			<span>
				<input type="text" name="search" placeholder="search" class="filter-field transitions">
			</span>
	</div>

	<div id="books-list">
		{{#each books key="@index" as |book|}}
			<a href="/book/{{book.id}}" class="book-link">
				<img src={{book.imageUrl}} class="book transitions" title={{book.title}}>
			</a>
		{{/each}}
	</div>
</div>